<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
        .important {
            font-weight: bold;
        }
        .wide {
            width: 100%;
        }
	</ui:style>
	<g:HTMLPanel>
		<table>
			<tr>
				<td>Last Name:</td>
				<td>
					<g:TextBox ui:field="lastName" />
				</td>
			</tr>
            <tr>
                <td>Unit Type:</td>
                <td>
                    <g:ListBox ui:field="unitType" allowMultiSelect="false" />
                </td>
            </tr>
            <tr>
                <td>Unit Number:</td>
                <td>
                    <g:TextBox ui:field="unitNumber" />
                </td>
            </tr>
		</table>
		<g:Button ui:field="searchButton" >Search</g:Button>
		<g:FlowPanel ui:field="searchResultsPanel" visible="false" >
		    <g:ListBox ui:field="searchResults" allowMultiSelect="true" visibleItemCount="10" styleName="{style.wide}"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 