<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- the application context definition for the springapp DispatcherServlet -->

	<bean name="index.cs" class="com.campscribe.controller.web.IndexController" />
    <bean name="campInfo.cs" class="com.campscribe.controller.web.CampInfoController" />
    <bean name="meritBadges.cs" class="com.campscribe.controller.web.MeritBadgeController" />
    <bean name="meritBadgeMetadata.cs" class="com.campscribe.controller.web.MeritBadgeMetadataController" />
	<bean name="events.cs" class="com.campscribe.controller.web.EventController" />
	<bean name="scouts.cs" class="com.campscribe.controller.web.ScoutController" />
	<bean name="clazzes.cs" class="com.campscribe.controller.web.ClazzController" />
	<bean name="admin.cs" class="com.campscribe.controller.web.AdminController" />
	<bean name="reports.cs" class="com.campscribe.controller.web.ReportsController" />
	<bean name="tracking.cs" class="com.campscribe.controller.web.TrackingController" />
	<bean name="staff.cs" class="com.campscribe.controller.web.StaffController" />
	<bean name="upload.cs" class="com.campscribe.controller.web.UploadController" />

	<bean id="multipartResolver" class="org.gmr.web.multipart.GMultipartResolver">
		<property name="maxUploadSize" value="1048576" />
	</bean>

</beans>